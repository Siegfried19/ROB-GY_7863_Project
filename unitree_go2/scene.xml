<mujoco model="go2 scene">
  <include file="go2.xml"/>

  <statistic center="0 0 0.1" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.2 0.3 0.4" rgb2="0 0 0" width="512" height="3072"/>
        <texture name="moon_tex" type="2d" builtin="flat"
                 width="256" height="256"
                 rgb1="0.6 0.6 0.6" rgb2="0.4 0.4 0.4"/>
        <material name="moon_mat" texture="moon_tex" reflectance="0.2"/>
    
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="moon_mat" friction="1.2 0.02 0.01"/>
  </worldbody>
</mujoco>

